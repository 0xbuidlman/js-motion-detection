{
  "name": "Hands-Free Chrome",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Control your browser with physical motion & gestures, without touching the keyboard",
  "background": { "scripts": ["js/libs/underscore.js", "background.js"] },
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "file:///*/*"
  ],
  "browser_action": {
      "name": "Open the remote control",
      "default_icon": "images/icon.png"
  }
}
